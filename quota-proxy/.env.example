# Quota Proxy 环境变量配置示例
# 复制此文件为 .env 并根据需要修改

# 服务器配置
PORT=8787
HOST=127.0.0.1

# 数据库配置
DB_PATH=./data/quota.db
DB_BACKUP_DIR=./backups
DB_BACKUP_RETENTION_DAYS=30

# 认证配置
ADMIN_TOKEN=your-secure-admin-token-here
API_KEY_PREFIX=roc_

# 配额配置
DEFAULT_DAILY_LIMIT=1000
DEFAULT_MONTHLY_LIMIT=30000

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/quota-proxy.log

# 健康检查配置
HEALTH_CHECK_INTERVAL=30000  # 30秒
HEALTH_CHECK_TIMEOUT=5000    # 5秒

# CORS配置（如果需要）
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-API-Key

# 性能配置
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000  # 30秒
KEEP_ALIVE_TIMEOUT=5000  # 5秒

# 安全配置
RATE_LIMIT_WINDOW_MS=60000  # 1分钟
RATE_LIMIT_MAX_REQUESTS=100  # 每分钟最多100个请求