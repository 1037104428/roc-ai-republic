# Quota Proxy 环境变量配置示例
# 复制此文件为 .env 并根据需要修改

# 数据库配置
DATABASE_URL=sqlite:///data/quota.db
# 或使用 PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/quota_proxy

# 服务器配置
HOST=0.0.0.0
PORT=8787
LOG_LEVEL=info

# 安全配置
ADMIN_TOKEN=your-secure-admin-token-here
JWT_SECRET=your-jwt-secret-key-here

# 试用密钥配置
TRIAL_KEY_PREFIX=TRIAL_
TRIAL_KEY_EXPIRY_DAYS=7
TRIAL_REQUESTS_LIMIT=100

# 模型配置
MODEL_PROVIDERS=openai,anthropic,google
DEFAULT_MODEL=gpt-4o

# 速率限制
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_TOKENS_PER_MINUTE=100000

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090

# 日志配置
LOG_FORMAT=json
LOG_FILE=/var/log/quota-proxy/app.log
# 日志级别: debug, info, warn, error
LOG_LEVEL=info
# 是否启用JSON格式日志: true, false
JSON_LOGS=true
# 服务名称
SERVICE_NAME=quota-proxy

# 健康检查配置
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# 注意：
# 1. 生产环境请使用强密码和密钥
# 2. 定期轮换 ADMIN_TOKEN 和 JWT_SECRET
# 3. 数据库连接字符串根据实际数据库调整
# 4. 所有时间单位均为秒，除非特别说明
